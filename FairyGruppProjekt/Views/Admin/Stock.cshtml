 <section class="home-section">
       


    <h1>Products low in stock</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Amount in stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(p => p.AmountOfCopiesInStorage))
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.AmountOfCopiesInStorage == 0)
                        {
                            <h5 style="color:red;">Out of stock</h5>
                        }
                        else if (item.AmountOfCopiesInStorage > 0)
                        {
                            @Html.DisplayFor(modelItem => item.AmountOfCopiesInStorage)
                        }
                      
                    </td>
                </tr>

            }
        </tbody>
    </table>

    </section>




    <script>
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".sidebarBtn");
        sidebarBtn.onclick = function () {
            sidebar.classList.toggle("active");
            if (sidebar.classList.contains("active")) {
                sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
            } else
                sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
        }
    </script>




